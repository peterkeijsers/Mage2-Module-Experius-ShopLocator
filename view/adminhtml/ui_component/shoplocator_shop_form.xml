<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">shoplocator_shop_form.shoplocator_shop_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Page Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magento\Cms\Block\Adminhtml\Page\Edit\SaveButton"/>
            <button name="delete" class="Magento\Cms\Block\Adminhtml\Page\Edit\DeleteButton"/>
            <button name="back" class="Magento\Cms\Block\Adminhtml\Page\Edit\BackButton"/>
        </buttons>
        <namespace>shoplocator_shop_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>shoplocator_shop_form.shoplocator_shop_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="shoplocator_shop_form_data_source" component="Magento_Ui/js/form/provider">
        <argument name="aclResource" xsi:type="string">Experius_ShopLocator::shop_form</argument>
        <argument name="submitUrl" xsi:type="string">shoplocator/shop/save</argument>
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Experius\ShopLocator\Ui\DataProvider\ShopLocatorShopListingDataProvider
            </argument>
            <argument name="name" xsi:type="string">shoplocator_shop_form_data_source</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
        </argument>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shop</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <visible>false</visible>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">name</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="latitude" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">latitude</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
                <dataScope>latitude</dataScope>
            </settings>
        </field>
        <field name="longitude" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">longitude</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
                <dataScope>longitude</dataScope>
            </settings>
        </field>
        <field name="shop_hours" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shop_hours</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Shop hours</label>
                <dataScope>shop_hours</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
